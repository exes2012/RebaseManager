<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Modern Mobile App Theme - Unified Design System -->

    <!-- Background Colors -->
    <Color x:Key="AppBackgroundColor">#FFF8FAFC</Color>
    <Color x:Key="SurfaceColor">#FFFFFFFF</Color>
    <Color x:Key="CardColor">#FFFFFFFF</Color>
    <Color x:Key="ElevatedSurfaceColor">#FFFFFFFF</Color>

    <!-- Text Colors -->
    <Color x:Key="OnSurfaceColor">#FF0F172A</Color>
    <Color x:Key="OnSurfaceVariantColor">#FF64748B</Color>
    <Color x:Key="OnSurfaceMutedColor">#FF94A3B8</Color>

    <!-- Primary Colors -->
    <Color x:Key="PrimaryColor">#FF3B82F6</Color>
    <Color x:Key="PrimaryVariantColor">#FF2563EB</Color>
    <Color x:Key="OnPrimaryColor">#FFFFFFFF</Color>

    <!-- Border and Outline -->
    <Color x:Key="OutlineColor">#FFE2E8F0</Color>
    <Color x:Key="OutlineVariantColor">#FFF1F5F9</Color>

    <!-- State Colors -->
    <Color x:Key="HoverColor">#FFF8FAFC</Color>
    <Color x:Key="PressedColor">#FFF1F5F9</Color>
    <Color x:Key="FocusColor">#FFDBEAFE</Color>

    <!-- Semantic Colors -->
    <Color x:Key="SuccessColor">#FF059669</Color>
    <Color x:Key="WarningColor">#FFD97706</Color>
    <Color x:Key="ErrorColor">#FFDC2626</Color>

    <!-- Disabled States -->
    <Color x:Key="DisabledColor">#FFCBD5E1</Color>
    <Color x:Key="OnDisabledColor">#FF94A3B8</Color>

    <!-- Shadow Colors -->
    <Color x:Key="ShadowColor">#1A000000</Color>
    <Color x:Key="ShadowLightColor">#0D000000</Color>
    <Color x:Key="ShadowMediumColor">#26000000</Color>

    <!-- Solid Color Brushes -->
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="{StaticResource AppBackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardColor}"/>
    <SolidColorBrush x:Key="ElevatedSurfaceBrush" Color="{StaticResource ElevatedSurfaceColor}"/>

    <SolidColorBrush x:Key="OnSurfaceBrush" Color="{StaticResource OnSurfaceColor}"/>
    <SolidColorBrush x:Key="OnSurfaceVariantBrush" Color="{StaticResource OnSurfaceVariantColor}"/>
    <SolidColorBrush x:Key="OnSurfaceMutedBrush" Color="{StaticResource OnSurfaceMutedColor}"/>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryVariantBrush" Color="{StaticResource PrimaryVariantColor}"/>
    <SolidColorBrush x:Key="OnPrimaryBrush" Color="{StaticResource OnPrimaryColor}"/>

    <SolidColorBrush x:Key="OutlineBrush" Color="{StaticResource OutlineColor}"/>
    <SolidColorBrush x:Key="OutlineVariantBrush" Color="{StaticResource OutlineVariantColor}"/>

    <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColor}"/>
    <SolidColorBrush x:Key="PressedBrush" Color="{StaticResource PressedColor}"/>
    <SolidColorBrush x:Key="FocusBrush" Color="{StaticResource FocusColor}"/>

    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>

    <SolidColorBrush x:Key="DisabledBrush" Color="{StaticResource DisabledColor}"/>
    <SolidColorBrush x:Key="OnDisabledBrush" Color="{StaticResource OnDisabledColor}"/>

    <!-- Gradient Brushes -->
    <LinearGradientBrush x:Key="PrimaryGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource PrimaryColor}" Offset="0"/>
        <GradientStop Color="{StaticResource PrimaryVariantColor}" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="AppBackgroundGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource AppBackgroundColor}" Offset="0"/>
        <GradientStop Color="#FFF1F5F9" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="CardGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource SurfaceColor}" Offset="0"/>
        <GradientStop Color="#FFFEFEFE" Offset="1"/>
    </LinearGradientBrush>

    <!-- Design System Constants -->
    <sys:Double x:Key="CornerRadiusSmall">8</sys:Double>
    <sys:Double x:Key="CornerRadiusMedium">12</sys:Double>
    <sys:Double x:Key="CornerRadiusLarge">16</sys:Double>
    <sys:Double x:Key="CornerRadiusXLarge">20</sys:Double>

    <CornerRadius x:Key="SmallCornerRadius">8</CornerRadius>
    <CornerRadius x:Key="MediumCornerRadius">12</CornerRadius>
    <CornerRadius x:Key="LargeCornerRadius">16</CornerRadius>
    <CornerRadius x:Key="XLargeCornerRadius">20</CornerRadius>

    <Thickness x:Key="SmallPadding">8</Thickness>
    <Thickness x:Key="MediumPadding">16</Thickness>
    <Thickness x:Key="LargePadding">24</Thickness>
    <Thickness x:Key="XLargePadding">32</Thickness>

</ResourceDictionary>
